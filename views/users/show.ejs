<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageOwner.username %>'s Pantry
    </title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
        <h1>Welcome to <%= pageOwner.username %>'s Recipes</h1>
        <% if(ownerRecipes.length) { %>
            <% ownerRecipes.forEach((recipe)=>{ %>
                <h2>
                    <%= recipe.name %>
                </h2>
                <p>
                    <%= recipe.instructions %>
                </p>
                <h3>Ingredients</h3>
                <ul>
                    <% recipe.ingredients.forEach((ing)=>{ %>
                        <p>
                            <%= ing.name %>
                        </p>
                    <% }) %>
                </ul>
                <% }) %>
        <% } else { %>
            <p>This user currently has no recipes.</p>
        <% } %>
</body>